<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/body_muscle_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginLeft="@dimen/spacing_12dp"
            android:layout_marginRight="@dimen/spacing_12dp"
            android:layout_marginTop="@dimen/spacing_12dp"
            android:orientation="vertical"
            card_view:cardCornerRadius="10dp"
            card_view:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/muscle_analyze_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="@dimen/spacing_12dp"
                    android:text="@string/segment_muscle"
                    android:textColor="@color/lesson_details_dark_back"
                    android:textSize="@dimen/textsize_small"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp">

                    <ImageView
                        android:id="@+id/muscle_analyze_imageView"
                        android:layout_width="95dp"
                        android:layout_height="180dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/icon_muscle"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_12dp"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/spacing_12dp">

                        <TextView
                            android:id="@+id/left_muscle_percentage_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:textColor="@color/lesson_details_dark_back"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/left_muscle_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:textColor="@color/add_minus_dishes_text"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/left_muscle_unit_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" kg"
                                android:textColor="@color/lesson_details_dark_back"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/left_muscle_evaluate_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:text="@string/normal"
                            android:textColor="@color/add_minus_dishes_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/spacing_12dp"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/spacing_12dp">

                        <TextView
                            android:id="@+id/right_muscle_percentage_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:textColor="@color/lesson_details_dark_back"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/right_muscle_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/add_minus_dishes_text"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/right_muscle_unit_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" kg"
                                android:textColor="@color/lesson_details_dark_back"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/right_muscle_evaluate_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:text="@string/normal"
                            android:textColor="@color/add_minus_dishes_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/spacing_12dp"
                        android:paddingRight="@dimen/spacing_12dp">

                        <TextView
                            android:id="@+id/right_down_muscle_percentage_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:textColor="@color/lesson_details_dark_back"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/right_down_muscle_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/add_minus_dishes_text"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/right_down_muscle_unit_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" kg"
                                android:textColor="@color/lesson_details_dark_back"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/right_down_muscle_evaluate_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:text="@string/normal"
                            android:textColor="@color/add_minus_dishes_text"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/spacing_12dp"
                        android:paddingLeft="@dimen/spacing_12dp">

                        <TextView
                            android:id="@+id/left_down_muscle_percentage_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:textColor="@color/lesson_details_dark_back"
                            android:visibility="gone"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/lef_down_muscle_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textColor="@color/add_minus_dishes_text"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/lef_down_muscle_unit_TextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" kg"
                                android:textColor="@color/lesson_details_dark_back"
                                android:textStyle="bold"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/lef_down_muscle_evaluate_TextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="@dimen/spacing_4dp"
                            android:text="@string/normal"
                            android:textColor="@color/add_minus_dishes_text"/>
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_12dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="@dimen/spacing_2dp"
                        android:layout_height="@dimen/spacing_12dp"
                        android:layout_gravity="center"
                        android:background="@color/add_minus_dishes_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/spacing_8dp"
                        android:drawableLeft="@drawable/shape_radius_green_btn_background"
                        android:text="@string/analyze_conclusion"
                        android:textColor="@color/add_minus_dishes_text"
                        android:textSize="@dimen/textsize_15"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/muscle_analyze_result_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_24dp"
                    android:lineSpacingExtra="3dp"
                    android:padding="@dimen/spacing_12dp"
                    android:textColor="@color/c969a9e"
                    android:textSize="@dimen/textsize_small"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>

    <TextView
        android:id="@+id/muscle_result_history_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_4dp"
        android:background="@drawable/shape_radius_green_btn_background"
        android:gravity="center"
        android:minWidth="100dp"
        android:padding="@dimen/spacing_8dp"
        android:text="@string/history_record"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>
</RelativeLayout>