<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:fresco="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:background="@color/white"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <com.aaron.android.framework.library.imageloader.HImageView
                android:id="@+id/head_image_background"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                fresco:failureImage="@mipmap/bg_private_teacher_default"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@mipmap/bg_private_teacher_default"
                fresco:placeholderImageScaleType="centerCrop"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/c80000000"
                android:gravity="center"
                android:orientation="vertical">
            </LinearLayout>
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/my_head_CardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="180dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardPreventCornerOverlap="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/person_data"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_48dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="雷达"
                    android:textColor="@color/lesson_details_dark_back"
                    android:textSize="@dimen/textsize_15"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/spacing_8dp"
                    android:visibility="visible">

                    <LinearLayout
                        android:id="@+id/layout_person_side"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="年龄"
                            android:textColor="@color/lesson_details_gray_back"
                            android:textSize="@dimen/textsize_small"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/person_side_data"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:textColor="@color/liking_green_btn_back"
                            android:textSize="32sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/line"/>

                    <LinearLayout
                        android:id="@+id/layout_my_train_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="体重"
                            android:textColor="@color/lesson_details_gray_back"
                            android:textSize="@dimen/textsize_small"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/my_train_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="80"
                                android:textColor="@color/liking_green_btn_back"
                                android:textSize="32sp"
                                android:textStyle="bold"/>

                            <TextView
                                android:id="@+id/my_train_time_unit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/spacing_4dp"
                                android:layout_marginTop="@dimen/spacing_8dp"
                                android:text="kg"
                                android:textColor="@color/lesson_details_dark_back"
                                android:textSize="@dimen/textsize_small"
                                android:textStyle="bold"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <com.aaron.android.framework.library.imageloader.HImageView
        android:id="@+id/head_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        fresco:failureImage="@drawable/icon_head_default_image"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/icon_head_default_image"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:roundAsCircle="true"/>
</FrameLayout>