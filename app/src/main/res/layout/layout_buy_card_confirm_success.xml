<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_confirm_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:background="@color/cf1f3f7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/buy_card_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_8dp"
            android:layout_marginLeft="@dimen/spacing_12dp"
            android:layout_marginRight="@dimen/spacing_12dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/shape_white_shadow_radius"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:padding="12dp"
            android:textColor="@color/c34c86c"
            android:textSize="@dimen/normal_text_size_12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/buy_card_notice"
            android:visibility="visible">


            <TextView
                android:id="@+id/card_type"
                android:layout_width="120dp"
                android:layout_height="80dp"
                android:layout_margin="@dimen/spacing_12dp"
                android:background="@drawable/bg_confirm_card_back"
                android:gravity="center"
                android:paddingTop="@dimen/spacing_4dp"
                android:text="全通半年卡"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/card_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:text="¥1233"
                    android:textColor="@color/liking_green_btn_back"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/old_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="22dp"
                    android:layout_toRightOf="@+id/card_money"
                    android:text="¥123333"
                    android:textSize="@dimen/textsize_small"
                    android:visibility="visible"
                    />


                <TextView
                    android:id="@+id/period_of_validity_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/card_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:text="@string/period_of_validity"
                    android:textColor="@color/lesson_details_gray_back"
                    android:textSize="@dimen/normal_text_size_12sp"/>

                <TextView
                    android:id="@+id/period_of_validity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/card_money"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/period_of_validity_prompt"
                    android:text="2019.08.09~2018.10.11"
                    android:textColor="@color/lesson_details_dark_back"
                    android:textSize="@dimen/normal_text_size_12sp"/>

            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:orientation="vertical"
                android:visibility="visible">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="@string/gymName"
                    android:textColor="@color/lesson_details_gray_back"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/gym_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:paddingTop="@dimen/spacing_12dp"
                    android:text="LIKin健身店"
                    android:textColor="@color/lesson_details_dark_back"
                    android:textSize="@dimen/normal_text_size_13sp"/>


                <TextView
                    android:id="@+id/gym_address_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="35dp"
                    android:text="@string/gymAddress"
                    android:textColor="@color/lesson_details_gray_back"
                    android:textSize="20sp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/gym_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="15dp"
                        android:layout_toLeftOf="@+id/address_map"
                        android:paddingLeft="@dimen/spacing_12dp"
                        android:text="中山按"
                        android:textColor="@color/lesson_details_dark_back"
                        android:textSize="@dimen/normal_text_size_12sp"/>


                    <ImageView
                        android:id="@+id/address_map"
                        android:layout_width="15dp"
                        android:layout_height="19dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="@dimen/spacing_12dp"
                        android:layout_marginRight="@dimen/spacing_12dp"
                        android:layout_marginTop="2dp"
                        android:background="@drawable/icon_map"
                        android:padding="@dimen/spacing_12dp"/>

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="30dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="时段"
                    android:textSize="20sp"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rv_card_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/give_water_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:text="@string/give_water_time"
                    android:textColor="@color/lesson_details_gray_back"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/give_water_time"
                    android:layout_marginTop="6dp"
                    android:paddingLeft="12dp"
                    android:text="@string/give_water_uknow"
                    android:textColor="#888b9a"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/water_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:paddingTop="6dp"
                    android:text="200min"
                    android:textColor="@color/liking_green_btn_back"
                    android:textSize="@dimen/textsize_small"/>
            </LinearLayout>

            <include
                layout="@layout/layout_pay_new"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:paddingLeft="12dp"
                android:text="@string/please_select_coupons"
                android:textColor="@color/lesson_details_gray_back"
                android:textSize="20sp"/>

            <RelativeLayout
                android:id="@+id/layout_coupons_courses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/spacing_8dp"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingRight="@dimen/spacing_12dp"
                android:paddingTop="@dimen/spacing_8dp">

                <TextView
                    android:id="@+id/select_coupon_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/liking_green_btn_back"
                    android:textSize="@dimen/textsize_small"/>

                <ImageView
                    android:id="@+id/bg_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:src="@drawable/bg_right_arrow"/>

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/buy_card_agree_protocol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="12dp">

                <CheckBox
                    android:id="@+id/buy_card_agree_protocol_checkbox"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:background="@drawable/agree_check"
                    android:button="@null"
                    android:clickable="false"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/i_read_agreement"
                    android:textColor="@color/lesson_details_gray_back"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/buy_card_agree_protocol_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="@string/platform_purchase_agreement"
                    android:textColor="@color/add_minus_dishes_text"
                    android:textSize="13sp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/likingfit_uknow"
                android:textColor="#888b8a"
                android:textSize="12sp"
                />


            <TextView
                android:id="@+id/immediately_buy_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_20dp"
                android:layout_marginLeft="@dimen/spacing_12dp"
                android:layout_marginRight="@dimen/spacing_12dp"
                android:layout_marginTop="@dimen/spacing_12dp"
                android:background="@drawable/shape_gray_radius_back"
                android:clickable="false"
                android:gravity="center"
                android:padding="@dimen/spacing_12dp"
                android:text="@string/immediately_buy_btn"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_small"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>