<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_radius_white_back"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_heart_rate_back"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dialog_heart_rate_cancel"
            android:layout_width="@dimen/spacing_24dp"
            android:layout_height="@dimen/spacing_24dp"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/spacing_12dp"
            android:layout_marginTop="@dimen/spacing_12dp"
            android:background="@drawable/icon_dialog_close"
            android:padding="@dimen/spacing_12dp"/>


        <ImageView
            android:layout_width="120dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/spacing_12dp"
            android:background="@drawable/bg_get_heart_rate"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_12dp"
        android:paddingLeft="@dimen/spacing_20dp"
        android:paddingRight="@dimen/spacing_20dp"
        android:paddingTop="@dimen/spacing_12dp"
        android:text="@string/click_button_measure"
        android:textColor="@color/lesson_details_dark_back"
        android:textSize="@dimen/textsize_small"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_12dp"
        android:paddingLeft="@dimen/spacing_20dp"
        android:paddingRight="@dimen/spacing_20dp"
        android:paddingTop="@dimen/spacing_12dp"
        android:text="@string/close_to_the_wrist_wait_for_a_moment"
        android:textColor="@color/lesson_details_dark_back"
        android:textSize="@dimen/textsize_small"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/spacing_20dp"
        android:paddingRight="@dimen/spacing_20dp"
        android:paddingTop="@dimen/spacing_12dp"
        android:text="@string/bracelet_shake_measure_finish"
        android:textColor="@color/lesson_details_dark_back"
        android:textSize="@dimen/textsize_small"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/spacing_20dp"
        android:paddingLeft="@dimen/spacing_20dp"
        android:paddingRight="@dimen/spacing_20dp"
        android:text="@string/measure_fail_please_repeat_measure"
        android:textColor="@color/lesson_details_gray_back"
        android:textSize="@dimen/textsize_small"/>

</LinearLayout>