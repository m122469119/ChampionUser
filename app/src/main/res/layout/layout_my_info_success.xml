<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_content_background"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_head_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_card_stoke_bottom_background"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <com.aaron.android.framework.library.imageloader.HImageView
            android:id="@+id/head_image"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="10dp"
            fresco:failureImage="@drawable/icon_head_default_image"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/icon_head_default_image"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:gravity="right"
            android:text="@string/change_head_image"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:src="@drawable/bg_right_arrow"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_card_background"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/user_name"
                android:textColor="@color/lesson_details_dark_back"
                android:textSize="@dimen/textsize_small"/>

            <EditText
                android:id="@+id/edit_user_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/user_name"
                android:background="@color/transparent"
                android:gravity="right"
                android:textCursorDrawable="@null"
                android:hint="@string/input_user_name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/lesson_details_dark_back"
                android:textColorHint="@color/bg_hint_gray"
                android:textSize="@dimen/textsize_small"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/sex"/>

            <TextView
                android:id="@+id/select_sex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="10dp"
                android:text="@string/activity_title_sex"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/bg_right_arrow"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/user_birthday"/>

            <TextView
                android:id="@+id/select_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:padding="10dp"
                android:text="@string/activity_title_select_birthday"/>

            <ImageView
                android:layout_width="8dp"
                android:layout_height="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:src="@drawable/bg_right_arrow"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/user_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/height"
                android:textColor="@color/lesson_details_dark_back"
                android:textSize="@dimen/textsize_small"/>

            <EditText
                android:id="@+id/edit_height"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/user_height"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/input_height"
                android:inputType="number"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:textColor="@color/lesson_details_dark_back"
                android:textColorHint="@color/bg_hint_gray"
                android:textSize="@dimen/textsize_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="cm"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:background="@color/line"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <TextView
                android:id="@+id/user_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:text="@string/user_weight"
                android:textColor="@color/lesson_details_dark_back"
                android:textSize="@dimen/textsize_small"/>

            <EditText
                android:id="@+id/edit_weight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:layout_toRightOf="@+id/user_weight"
                android:background="@color/transparent"
                android:gravity="right"
                android:hint="@string/input_weight"
                android:inputType="numberDecimal"
                android:textCursorDrawable="@null"
                android:padding="10dp"
                android:textColor="@color/lesson_details_dark_back"
                android:textColorHint="@color/bg_hint_gray"
                android:textSize="@dimen/textsize_small"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="kg"/>
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/finish_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:text="@string/finish"
        android:textSize="@dimen/textsize_15"
        android:gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:background="@drawable/shape_radius_green_btn_background"
        android:layout_marginTop="15dp"/>
</LinearLayout>