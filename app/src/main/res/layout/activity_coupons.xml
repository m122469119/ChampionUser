<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layout_exchange_coupon"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_app_dark_color"
        android:orientation="horizontal"
        android:visibility="gone">

        <EditText
            android:id="@+id/edit_coupons_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:hint="请输入兑换码"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="@color/white"
            android:textCursorDrawable="@null"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/exchange_coupons_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:text="兑换优惠券"
            android:textSize="13sp"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/my_coupons_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layout_exchange_coupon"/>
</LinearLayout>