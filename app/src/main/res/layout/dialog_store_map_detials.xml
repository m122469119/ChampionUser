<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/map_store_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/main_app_dark_color"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        android:textColor="@color/map_dialog_green_text"
        android:textSize="@dimen/textsize_small"/>

    <RelativeLayout
        android:id="@+id/layout_store_image"
        android:layout_width="match_parent"
        android:layout_height="160dp">

        <com.aaron.android.framework.library.imageloader.HImageView
            android:id="@+id/store_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:failureImage="@drawable/bg_no_data_default_image"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/bg_no_data_default_image"
            fresco:placeholderImageScaleType="centerCrop"/>

        <TextView
            android:id="@+id/store_address"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_alignParentBottom="true"
            android:background="@color/lesson_details_layer"
            android:gravity="center|left"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small"/>
    </RelativeLayout>

</LinearLayout>