<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_app_color"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_notice"/>


        <TextView
            android:id="@+id/notice_prompt"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@+id/notice_text"
            android:background="@drawable/shopping_cart_num_bg"/>

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/icon_notice"
            android:paddingBottom="12dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:text="@string/notice"
            android:textColor="@color/home_right_dialog_text"/>
    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/home_right_dialog_line"/>

    <LinearLayout
        android:id="@+id/layout_open_door"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_open"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="12dp"
            android:paddingRight="10dp"
            android:paddingTop="12dp"
            android:text="@string/open_the_door"
            android:textColor="@color/home_right_dialog_text"/>
    </LinearLayout>

</LinearLayout>