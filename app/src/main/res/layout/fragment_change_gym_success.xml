<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
        android:id="@+id/my_gym"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/liking_green_btn_back"
        android:gravity="center"
        android:paddingBottom="12dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:visibility="gone"
        android:textColor="@color/white"
        android:textSize="13sp"/>

    <ScrollView
        android:id="@+id/layout_gym_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/my_gym">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layout_no_buy_card"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:background="@drawable/no_buy_card_back"
                android:visibility="gone">

            </RelativeLayout>

            <com.goodchef.liking.widgets.PullToRefreshRecyclerView
                android:id="@+id/change_gym_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>