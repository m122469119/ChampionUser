<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/app_content_background"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_content_background"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <include layout="@layout/layout_liking_my_head"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layout_head_info"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <com.aaron.android.framework.library.imageloader.HImageView
                        android:id="@+id/head_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        fresco:failureImage="@drawable/icon_head_default_image"
                        fresco:failureImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/icon_head_default_image"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>

                    <TextView
                        android:id="@+id/person_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="30dp"
                        android:layout_toRightOf="@+id/head_image"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/person_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/person_name"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@+id/head_image"
                        android:textSize="13sp"/>

                    <TextView
                        android:id="@+id/person_login_prompt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/head_image"
                        android:text="未登录"
                        android:textColor="@color/lesson_details_gray_back"
                        android:textSize="15sp"/>

                    <TextView
                        android:id="@+id/login_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:background="@drawable/shape_radius_green_btn_background"
                        android:gravity="center"
                        android:minWidth="80dp"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:text="登录"
                        android:visibility="visible"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/login_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginRight="10dp"
                        android:layout_weight="4"
                        android:src="@drawable/bg_right_arrow"/>

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/line"/>

                <include layout="@layout/layout_my_item"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>

            <include
                android:id="@+id/layout_invite_friends"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_contact_join"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_become_teacher"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_about_us"
                layout="@layout/item_my_standard"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/line"/>

            <TextView
                android:id="@+id/login_out_btn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_card_background"
                android:gravity="center"
                android:text="登出"
                android:textColor="@color/lesson_details_dark_back"
                android:textSize="14sp"/>

        </LinearLayout>

    </ScrollView>
</LinearLayout>