<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:fresco="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.aaron.android.framework.library.imageloader.HImageView
                android:id="@+id/head_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                fresco:failureImage="@drawable/image_defalut_bg"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/image_defalut_bg"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true"/>

            <RelativeLayout
                android:id="@+id/layout_head_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="liking"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/person_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/person_name"
                    android:layout_centerHorizontal="true"
                    android:text="158566***3567"
                    android:textSize="15sp"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shape_four_card_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="季度卡"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="时间段：全天"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="有效期：2016/05——2016/10"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="续卡"/>
            </LinearLayout>

            <include layout="@layout/layout_my_item"/>

            <include
                android:id="@+id/layout_invite_friends"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_coupons"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_contact_join"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_become_teacher"
                layout="@layout/item_my_standard"/>

            <include
                android:id="@+id/layout_about_us"
                layout="@layout/item_my_standard"/>


            <TextView
                android:id="@+id/login_out_btn"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                android:gravity="center"
                android:text="退出登录"
                android:textSize="14sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="如有问题,联系客服"
                android:textSize="13sp"/>
        </LinearLayout>

    </ScrollView>
</LinearLayout>