<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/smartspot_bg"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_run_finish_header_bg" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="42dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/spacing_16dp"
                    android:layout_marginRight="@dimen/spacing_16dp"
                    android:layout_marginTop="60dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/spacing_16dp"
                    android:paddingLeft="@dimen/spacing_20dp"
                    android:paddingRight="@dimen/spacing_20dp"
                    android:paddingTop="96dp">

                    <TextView
                        android:id="@+id/tv_header_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="恭喜你完成本次跑步"
                        android:textColor="@color/c34c86c"
                        android:textSize="@dimen/spacing_24dp" />

                    <TextView
                        android:id="@+id/tv_header_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:text="你完成马拉松15Km跑"
                        android:textColor="@color/c34c86c"
                        android:textSize="@dimen/textsize_16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_16dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_left_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/lesson_details_gray_back"
                                android:textSize="@dimen/textsize_12"
                                tools:text="跑步距离：" />

                            <TextView
                                android:id="@+id/tv_left_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/c34c86c"
                                android:textSize="@dimen/normal_text_size_15sp"
                                tools:text="12.2Km" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_right_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/lesson_details_gray_back"
                                android:textSize="@dimen/textsize_12"
                                tools:text="跑步时间：" />

                            <TextView
                                android:id="@+id/tv_right_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/c34c86c"
                                android:textSize="@dimen/normal_text_size_15sp"
                                tools:text="00:32:59" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/run_finish_have"
                            android:textColor="@color/lesson_details_gray_back"
                            android:textSize="@dimen/textsize_12" />

                        <TextView
                            android:id="@+id/tv_partner_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/spacing_4dp"
                            android:layout_marginRight="@dimen/spacing_4dp"
                            android:textColor="@color/c34c86c"
                            android:textSize="@dimen/normal_text_size_15sp"
                            tools:text="2233" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/run_finish_partner"
                            android:textColor="@color/lesson_details_gray_back"
                            android:textSize="@dimen/textsize_12" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="36dp"
                    android:orientation="vertical">

                    <com.aaron.imageloader.code.HImageView
                        android:id="@+id/iv_header"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        fresco:failureImage="@drawable/icon_head_default_image"
                        fresco:failureImageScaleType="centerCrop"
                        fresco:placeholderImage="@drawable/icon_head_default_image"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"
                        tools:src="@drawable/ic_launcher" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_8dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/lesson_details_gray_back"
                        android:textSize="@dimen/textsize_14"
                        tools:text="UserName" />
                </LinearLayout>

            </FrameLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|top"
                android:layout_marginRight="@dimen/spacing_24dp"
                android:src="@drawable/ic_run_finish_win" />
        </FrameLayout>

        <LinearLayout
            android:id="@+id/view_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_16dp"
            android:layout_marginTop="@dimen/spacing_24dp"
            android:orientation="vertical" />

        <Button
            android:id="@+id/bt_finish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_20dp"
            android:background="@drawable/shape_radius_green_btn_background"
            android:text="@string/run_finish_finish"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_18" />
    </LinearLayout>
</ScrollView>