<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:orientation="vertical">

    <TextView
        android:id="@+id/person_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/person_test_data"
        android:textColor="@color/lesson_details_gray_back"
        android:textSize="@dimen/textsize_small"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/person_content_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/liking_green_btn_back"
            android:textSize="32sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/person_content_data_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_4dp"
            android:layout_marginTop="@dimen/spacing_8dp"
            android:text="point"
            android:textColor="@color/lesson_details_dark_back"
            android:textSize="@dimen/textsize_small"
            android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>