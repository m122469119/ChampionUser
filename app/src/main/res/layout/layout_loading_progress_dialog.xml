<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_loading_dialog_bg"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imageview_loading_dialog"
        android:layout_width="@dimen/refresh_load_icon_width"
        android:layout_height="@dimen/refresh_load_icon_width"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/textview_loading_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"/>
</LinearLayout>  