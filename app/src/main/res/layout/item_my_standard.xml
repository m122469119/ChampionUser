<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="42dp">

        <ImageView
            android:id="@+id/standard_my_icon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:layout_weight="4"/>

        <TextView
            android:id="@+id/standard_my_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="left"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textColor="@color/bg_dark_gray_text"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_weight="4"
            android:gravity="center"
            android:layout_gravity="center"
            android:src="@drawable/bg_right_arrow"/>

    </LinearLayout>

    <View
        android:id="@+id/standard_view_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/action_bar_gray"/>
</LinearLayout>