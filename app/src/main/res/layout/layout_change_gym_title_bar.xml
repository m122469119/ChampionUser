<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                            xmlns:app="http://schemas.android.com/apk/res-auto"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:background="?attr/colorPrimary"
                                            android:theme="@style/AppTheme.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentInsetLeft="0dp"
        android:contentInsetStart="0dp"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/change_gym_toolbar_left_icon"
                android:layout_width="?attr/actionBarSize"
                android:layout_height="?attr/actionBarSize"
                android:layout_alignParentLeft="true"
                android:background="@drawable/selector_toolbar_home_icon_bg"
                android:scaleType="centerInside"
                android:src="@drawable/app_bar_back"/>

            <TextView
                android:id="@+id/change_gym_toolbar_left"
                style="@style/Style_App_Bar_Menu_Text"
                android:layout_alignParentLeft="true"
                android:gravity="left|center_vertical"
                android:paddingLeft="16dp"/>

            <TextView
                android:id="@+id/change_gym_toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="切换场馆"
                android:textColor="@color/app_bar_text_color"
                android:textSize="@dimen/textsize_medium"/>

            <ImageView
                android:id="@+id/change_gym_toolbar_right_icon"
                android:layout_width="15dp"
                android:layout_height="8dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/lesson_title_down_arrow"
                android:scaleType="centerInside"/>


            <TextView
                android:id="@+id/change_gym_toolbar_right_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/change_gym_toolbar_right_icon"
                android:padding="10dp"
                android:textColor="@color/app_bar_text_color"
                android:textSize="@dimen/textsize_small"/>

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
</android.support.design.widget.AppBarLayout>