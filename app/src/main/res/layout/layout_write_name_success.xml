<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/user_info_background"
                android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:gravity="center"
        android:minHeight="?attr/actionBarSize"
        android:text="@string/activity_title_writename"
        android:textColor="@color/app_bar_text_color"
        android:textSize="@dimen/textsize_medium"/>


    <EditText
        android:id="@+id/write_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="180dp"
        android:background="@color/transparent"
        android:ellipsize="end"
        android:maxLength="15"
        android:gravity="center"
        android:hint="@string/liking_fans"
        android:maxEms="15"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingLeft="10dp"
        android:inputType="textPersonName"
        android:paddingRight="10dp"
        android:paddingTop="12dp"
        android:textColor="@color/user_name_text"
        android:textColorHint="@color/bg_hint_gray"
        android:textCursorDrawable="@null"
        android:textSize="@dimen/textsize_15"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/write_name_editText"
        android:layout_marginTop="@dimen/spacing_20dp"
        android:gravity="center"
        android:lineSpacingExtra="3dp"
        android:text="@string/name_limit_prompt"
        android:textColor="@color/liking_green_btn_back"
        android:textSize="@dimen/textsize_mirco"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@+id/write_name_editText"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/user_name_text"/>

    <TextView
        android:id="@+id/write_name_next_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/liking_green_btn_back"
        android:gravity="center"
        android:text="@string/next_text"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/write_name_next_btn"
        android:layout_marginBottom="@dimen/spacing_12dp"
        android:gravity="center"
        android:padding="@dimen/spacing_12dp"
        android:text="@string/default_name_input_prompt"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>

</RelativeLayout>