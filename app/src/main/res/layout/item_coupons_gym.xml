<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_item_coupons_gym_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Likingfit 复兴店"
        android:textColor="@color/coupons_gym_title_596167"
        android:textSize="@dimen/textsize_15" />

    <TextView
        android:id="@+id/txt_item_coupons_gym_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_item_coupons_gym_name"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:text="上海市黄浦区马当路388号"
        android:textColor="@color/coupons_gym_distance_aeb2b5" />


    <TextView
        android:id="@+id/txt_item_coupons_gym_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:text="0.6km"
        android:textColor="@color/coupons_gym_distance_aeb2b5"
        android:textSize="@dimen/normal_text_size_13sp" />

</RelativeLayout>