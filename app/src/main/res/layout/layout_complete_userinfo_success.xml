<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/user_info_background"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <com.aaron.android.framework.library.imageloader.HImageView
            android:id="@+id/complete_user_head_image"
            xmlns:fresco="http://schemas.android.com/apk/res-auto"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            fresco:failureImage="@drawable/icon_head_default_image"
            fresco:failureImageScaleType="centerCrop"
            fresco:placeholderImage="@drawable/icon_head_default_image"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingTop="12dp"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_15"/>

            <ImageView
                android:id="@+id/sex_man_image"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:background="@drawable/icon_man"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/sex_women_image"
                android:layout_width="10dp"
                android:layout_height="15dp"
                android:background="@drawable/icon_women"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:background="@color/complete_user_info_layer"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="出生年月："
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>

                <TextView
                    android:id="@+id/birthday_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ruler_line"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="身高："
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>

                <TextView
                    android:id="@+id/height_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ruler_line"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="12dp"
                android:paddingTop="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    android:text="体重："
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>

                <TextView
                    android:id="@+id/weight_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:gravity="right"
                    android:textColor="@color/user_name_text"
                    android:textSize="@dimen/textsize_15"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/ruler_line"/>

        </LinearLayout>
    </LinearLayout>


    <TextView
        android:id="@+id/complete_userInfo_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/liking_green_btn_back"
        android:gravity="center"
        android:text="@string/complete_btn"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>
</RelativeLayout>