<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/shape_radius_red_back"
              android:orientation="vertical">


    <ImageView
        android:id="@+id/dialog_unbind_cancel"
        android:layout_width="@dimen/spacing_24dp"
        android:layout_height="@dimen/spacing_24dp"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_12dp"
        android:background="@drawable/icon_dialog_close"
        android:padding="@dimen/spacing_12dp"/>

    <ImageView
        android:layout_width="215dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/spacing_20dp"
        android:layout_marginLeft="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_unbind_bracelet"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20dp"
        android:gravity="center"
        android:paddingBottom="@dimen/spacing_12dp"
        android:paddingLeft="@dimen/spacing_12dp"
        android:paddingRight="@dimen/spacing_12dp"
        android:text="解绑后，手环将无法上传数据！"
        android:textColor="@color/white"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/dialog_unbind_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_radius_red_btn_back"
        android:gravity="center"
        android:padding="@dimen/spacing_12dp"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="16sp"/>
</LinearLayout>