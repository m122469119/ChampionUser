<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_content_background"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp"
        android:background="@color/app_content_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp">

                <com.aaron.android.framework.library.imageloader.HImageView
                    android:id="@+id/group_lesson_details_shop_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    fresco:failureImage="@mipmap/bg_no_data_default_image"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/bg_no_data_default_image"
                    fresco:placeholderImageScaleType="centerCrop"/>

                <TextView
                    android:id="@+id/group_courses_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icon_group_courses_details"
                    android:gravity="center"
                    android:text="团体课"
                    android:textColor="@color/liking_lesson_group_text"
                    android:textSize="12sp"/>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lesson_details_layer">

                    <LinearLayout
                        android:id="@+id/layout_group_courses_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:paddingRight="10dp">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:src="@drawable/icon_share"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:paddingTop="2dp"
                            android:text="分享"
                            android:textColor="@color/white"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/schedule_result"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:textColor="@color/add_minus_dishes_text"
                        android:textSize="@dimen/textsize_mirco"
                        android:textStyle="bold"/>

                </RelativeLayout>
             </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_card_stoke_bottom_background"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/courses_time_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/lesson_time"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/courses_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/courses_time_details"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp">

                    <TextView
                        android:id="@+id/shop_place_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/lesson_venues"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/shop_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/shop_place_details"
                        android:gravity="left"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/shop_address_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/address"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/shop_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/shop_address_details"
                        android:gravity="left"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/layout_group_teacher_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/group_teacher_name_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:text="@string/lesson_teacher"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/group_teacher_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/group_teacher_name_details"
                        android:gravity="left"
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/rating_courses_details"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:text="强度："
                        android:textColor="@color/liking_lesson_text"
                        android:textSize="@dimen/textsize_small"/>

                    <RatingBar
                        android:id="@+id/rating_courses"
                        style="@style/LikingItemRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/rating_courses_details"
                        android:numStars="5"
                        />

                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="10dp"
                    android:text="课程介绍"
                    android:textColor="@color/lesson_details_dark_back"
                    android:textSize="@dimen/textsize_small"/>

                <TextView
                    android:id="@+id/courses_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="3dp"
                    android:padding="10dp"
                    android:textColor="@color/liking_lesson_text"
                    android:textSize="13sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:padding="10dp"
                        android:text="报名会员"
                        android:textColor="@color/lesson_details_dark_back"
                        android:textSize="@dimen/textsize_small"/>

                    <TextView
                        android:id="@+id/group_user_numbers"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="1 人"
                        android:textColor="@color/my_group_green_text"
                        android:textSize="@dimen/textsize_small"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:background="@color/line"/>
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/group_user_list_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:visibility="gone">

                <com.aaron.android.framework.library.imageloader.HImageView
                    android:id="@+id/teacher_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    fresco:failureImage="@mipmap/bg_no_data_default_image"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:placeholderImage="@mipmap/bg_no_data_default_image"
                    fresco:placeholderImageScaleType="centerCrop"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/lesson_details_layer">

                    <TextView
                        android:id="@+id/train_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize_mirco"/>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/teacher_introduce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_card_stoke_bottom_background"
                android:lineSpacingExtra="3dp"
                android:padding="10dp"
                android:textColor="@color/liking_lesson_text"
                android:textSize="13sp"
                android:visibility="gone"/>


            <LinearLayout
                android:id="@+id/layout_group_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/shape_card_background"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/layout_gym_introduce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="场馆介绍"
                        android:textColor="@color/lesson_details_dark_back"
                        android:textSize="@dimen/textsize_small"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:src="@drawable/bg_right_arrow"/>
                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/group_lesson_details_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/group_immediately_submit_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/liking_green_btn_back"
        android:gravity="center"
        android:text="@string/immadetails_appointment"
        android:textColor="@color/white"
        android:textSize="15sp"/>

    <LinearLayout
        android:id="@+id/layout_group_state"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_card_background"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/courses_state_prompt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15"
            />

        <TextView
            android:id="@+id/cancel_order_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@color/liking_green_btn_back"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_15"/>
    </LinearLayout>
</RelativeLayout>