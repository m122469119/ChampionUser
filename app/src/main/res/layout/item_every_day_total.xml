<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:background="@drawable/shape_radius_green_btn_background"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/every_day_total_data_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:paddingBottom="@dimen/spacing_8dp"
        android:paddingLeft="10dp"
        android:paddingTop="@dimen/spacing_8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>


    <TextView
        android:id="@+id/every_day_total_data_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/spacing_12dp"
        android:layout_marginTop="@dimen/spacing_8dp"
        android:paddingBottom="@dimen/spacing_8dp"
        android:paddingTop="@dimen/spacing_8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_small"/>

    <TextView
        android:id="@+id/every_day_total_data_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/every_day_total_data_unit"
        android:paddingBottom="@dimen/spacing_8dp"
        android:paddingTop="@dimen/spacing_8dp"
        android:textColor="@color/white"
        android:textSize="24sp"/>


</RelativeLayout>