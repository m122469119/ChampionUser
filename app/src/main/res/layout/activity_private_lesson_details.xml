<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="42dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.aaron.android.framework.library.imageloader.HImageView
                android:id="@+id/private_lesson_details_teach_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                fresco:failureImage="@drawable/linshi_back"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/linshi_back"
                fresco:placeholderImageScaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="教练介绍"
                android:textColor="@color/bg_dark_gray_text"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="3dp"
                android:text="教练介绍教练介绍教练介绍教练介绍教练介绍教练介绍练介绍教练介绍教练介绍教练介绍教"
                android:textSize="13sp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="训练计划"
                android:textColor="@color/bg_dark_gray_text"
                android:textSize="15sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:lineSpacingExtra="3dp"
                android:text="训练计划训练计划训练计划训练计划训练计划训练计划训练计划训练计划"
                android:textSize="13sp"/>

            <com.aaron.android.framework.library.imageloader.HImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                fresco:failureImage="@drawable/linshi_back"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/linshi_back"
                fresco:placeholderImageScaleType="centerCrop"/>

            <com.aaron.android.framework.library.imageloader.HImageView
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:layout_marginTop="10dp"
                fresco:failureImage="@drawable/linshi_back"
                fresco:failureImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/linshi_back"
                fresco:placeholderImageScaleType="centerCrop"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="有疑问？联系客服"/>

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_card_stoke_top_background"
        android:gravity="center"
        android:text="@string/immadetails_appointment"
        android:textSize="15sp"/>
</RelativeLayout>