<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:text="@string/title_write_invite_code"
            android:textColor="@color/lesson_details_dark_back"
            android:textSize="@dimen/textsize_15"/>

        <TextView
            android:id="@+id/invite_encourage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/add_minus_dishes_text"
            android:textSize="@dimen/textsize_15"/>


        <com.goodchef.liking.widgets.gridpasswordview.GridPasswordView
            android:id="@+id/invite_gridPasswordView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:visibility="gone"/>

        <EditText
            android:id="@+id/edit_invite_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textCursorDrawable="@null"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:layout_marginTop="15dp"
            android:background="@drawable/shape_four_card_background"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/error_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textColor="@color/red"
            android:textSize="@dimen/textsize_15"/>
    </LinearLayout>

    <TextView
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentBottom="true"
        android:background="@color/liking_green_btn_back"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"/>
</RelativeLayout>