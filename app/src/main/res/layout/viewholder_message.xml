<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_12dp"
        android:layout_marginLeft="@dimen/spacing_12dp">

        <ImageView
            android:id="@+id/message_read_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/spacing_8dp"
            android:src="@drawable/icon_green_point"
            android:visibility="visible"/>


        <TextView
            android:id="@+id/message_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/message_read_tag"
            android:paddingBottom="@dimen/spacing_12dp"
            android:paddingTop="@dimen/spacing_12dp"
            android:text="系统消息"
            android:textColor="@color/liking_lesson_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/message_name_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/spacing_8dp"
            android:paddingRight="@dimen/spacing_12dp"
            android:paddingTop="18dp"
            android:text="2017-09-10 17:29:19"
            android:textColor="@color/liking_lesson_text"
            android:textSize="13sp"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/message_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="3dp"
        android:paddingLeft="@dimen/spacing_12dp"
        android:paddingRight="@dimen/spacing_12dp"
        android:paddingBottom="@dimen/spacing_12dp"
        android:text="消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息消息"
        android:textColor="@color/liking_lesson_text"
        android:textSize="14sp"/>

</LinearLayout>