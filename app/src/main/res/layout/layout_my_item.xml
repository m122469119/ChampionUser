<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:paddingBottom="10dp"
              android:paddingTop="10dp"
              android:layout_marginTop="@dimen/spacing_12dp"
              android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/layout_my_course"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/icon_courses"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/lesson_details_dark_back"
            android:text="课程"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_my_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_order"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/lesson_details_dark_back"
            android:text="订单"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_member_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
           android:src="@drawable/icon_card"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/lesson_details_dark_back"
            android:text="会员卡"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_coupons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >

        <ImageView
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_coupons"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/lesson_details_dark_back"
            android:text="优惠券"/>
    </LinearLayout>
</LinearLayout>