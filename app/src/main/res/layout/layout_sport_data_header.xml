<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/main_app_bg_color"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.goodchef.liking.module.train.SportDataActivity">

    <android.support.v7.widget.CardView
            android:id="@+id/layout_all_sport"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            card_view:cardCornerRadius="0dp"
            card_view:cardPreventCornerOverlap="true">
        <include
                layout="@layout/layout_person_body_data_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="visible"/>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.TabLayout
            android:id="@+id/tablayout_sport"
            app:tabIndicatorColor="@null"
            app:tabBackground="@null"
            app:tabPadding="0dp"
            android:layout_width="match_parent"
            android:layout_height="160dp">
    </android.support.design.widget.TabLayout>

</LinearLayout>