              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerView_sport"
            android:layout_width="match_parent"
            android:layout_height="160dp"/>

    </FrameLayout>
</LinearLayout>