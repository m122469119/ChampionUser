<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_water_contains"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/water_unchecked_bg">

    <TextView
        android:id="@+id/item_water_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="25dp"
        android:textColor="@color/water_text_grey"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/item_water_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:textColor="@color/water_text_green"
        android:textSize="23sp" />

    <ImageView
        android:id="@+id/item_water_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@mipmap/water_right" />

</RelativeLayout>