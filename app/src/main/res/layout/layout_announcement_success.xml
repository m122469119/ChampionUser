<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/notice_top"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/spacing_20dp"
            android:layout_marginRight="@dimen/spacing_20dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/bg_notice_background"
            android:minHeight="200dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/notice_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/spacing_12dp"
                android:textColor="@color/c34c86c"
                android:textSize="16sp"/>


            <TextView
                android:id="@+id/notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:paddingBottom="@dimen/spacing_12dp"
                android:paddingLeft="@dimen/spacing_12dp"
                android:paddingRight="@dimen/spacing_12dp"
                android:textColor="@color/lesson_details_gray_back"
                android:textSize="14sp"/>


        </LinearLayout>
    </LinearLayout>

</ScrollView>